---
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Breadcrumbs from "@components/Breadcrumbs.astro";
import { Soundcloud } from "soundcloud.ts";

// Track of the week - paste the full SoundCloud track URL
const trackOfTheWeek = "https://soundcloud.com/vistuh/my-team-good-vistuh-remix";

// List your favorite SoundCloud artists by username
// Find the username from the artist's SoundCloud URL: soundcloud.com/USERNAME
const favoriteArtists = [
  "lvndquist",
  "limbowmusic",
  "carlzeer",
  "vistuh",
  "fonssmusic",
  "nvr-me",
  "filoomusic",
  "claws2",
];

// Fetch artist data from SoundCloud
let artists: Array<{
  username: string;
  avatar_url: string;
  permalink_url: string;
  followers_count: number;
}> = [];

try {
  const soundcloud = new Soundcloud();

  const artistPromises = favoriteArtists.map(async (artist) => {
    try {
      const user = await soundcloud.users.get(artist);
      return {
        username: user.username,
        avatar_url: user.avatar_url.replace('-large', '-t500x500'),
        permalink_url: user.permalink_url,
        followers_count: user.followers_count,
      };
    } catch (e) {
      console.error(`Failed to fetch artist: ${artist}`, e);
      return null;
    }
  });

  const results = await Promise.all(artistPromises);
  artists = results.filter((a): a is NonNullable<typeof a> => a !== null);
} catch (e) {
  console.error("Failed to initialize SoundCloud client:", e);
}
---

<Layout title="Music - Art">
  <Header activeNav="art" />
  <Breadcrumbs />
  <main id="main-content">
    <section class="py-12 px-4">
      <div class="mx-auto max-w-4xl">
        <h1 class="text-3xl font-bold text-skin-base mb-2 text-center">Music</h1>
        <p class="text-skin-base opacity-70 text-center mb-12">Artists I'm listening to right now</p>

        {artists.length > 0 ? (
          <div class="artists-huddle">
            {artists.map((artist, index) => (
              <a
                href={artist.permalink_url}
                target="_blank"
                rel="noopener noreferrer"
                class="artist-circle"
                style={`--index: ${index}; --total: ${artists.length};`}
                title={artist.username}
              >
                <img
                  src={artist.avatar_url}
                  alt={artist.username}
                  loading="lazy"
                />
                <span class="artist-name">{artist.username}</span>
              </a>
            ))}
          </div>
        ) : (
          <div class="text-center py-12">
            <p class="text-skin-base opacity-60">Loading artists...</p>
          </div>
        )}

        {/* Track of the Week */}
        <div class="track-of-week mt-16">
          <h2 class="text-xl font-semibold text-skin-base mb-6 text-center">Track of the Week</h2>
          <div class="track-embed">
            <iframe
              width="100%"
              height="300"
              scrolling="no"
              frameborder="no"
              allow="autoplay"
              src={`https://w.soundcloud.com/player/?url=${encodeURIComponent(trackOfTheWeek)}&color=%23ff5500&auto_play=false&hide_related=true&show_comments=false&show_user=true&show_reposts=false&show_teaser=false&visual=true`}
            ></iframe>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  .artists-huddle {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 0;
    padding: 2rem;
    position: relative;
  }

  .artist-circle {
    --size: 120px;
    --hover-size: 140px;
    width: var(--size);
    height: var(--size);
    border-radius: 50%;
    overflow: hidden;
    position: relative;
    margin: -15px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    border: 3px solid var(--color-card);
    z-index: calc(10 - var(--index));
  }

  .artist-circle:hover {
    width: var(--hover-size);
    height: var(--hover-size);
    z-index: 100;
    transform: translateY(-10px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.25);
  }

  .artist-circle img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .artist-circle:hover img {
    transform: scale(1.1);
  }

  .artist-name {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
    color: white;
    font-size: 0.7rem;
    font-weight: 500;
    padding: 1.5rem 0.5rem 0.5rem;
    text-align: center;
    opacity: 0;
    transition: opacity 0.3s ease;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .artist-circle:hover .artist-name {
    opacity: 1;
  }

  @media (max-width: 640px) {
    .artist-circle {
      --size: 90px;
      --hover-size: 110px;
      margin: -10px;
    }

    .artist-name {
      font-size: 0.6rem;
    }
  }

  @media (min-width: 768px) {
    .artist-circle {
      --size: 140px;
      --hover-size: 160px;
      margin: -20px;
    }
  }

  .artist-circle {
    animation: pop-in 0.4s cubic-bezier(0.4, 0, 0.2, 1) backwards;
    animation-delay: calc(var(--index) * 0.1s);
  }

  @keyframes pop-in {
    from {
      opacity: 0;
      transform: scale(0.5);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  .track-of-week {
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .track-embed {
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .track-embed iframe {
    display: block;
  }
</style>
